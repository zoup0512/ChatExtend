<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChatExtend" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepseek_primary</item>
        <item name="colorPrimaryVariant">@color/deepseek_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deepseek_secondary</item>
        <item name="colorSecondaryVariant">@color/deepseek_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 其他补充颜色 -->
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/gray_50</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorError">@color/red_500</item>
    </style>

    <style name="Theme.ChatExtend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChatExtend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatExtend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>